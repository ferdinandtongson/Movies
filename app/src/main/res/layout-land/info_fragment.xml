<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">


    <TextView android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:text="Title"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:lines="2"
        android:background="@color/powderBlueish_20"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="6"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView android:id="@+id/img_poster"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/sample_0"
            android:background="@color/powderBlueish_20"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:baselineAligned="false">

            <TextView android:id="@+id/txt_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:text="1999"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/powderBlueish_20"/>

            <ScrollView android:id="@+id/textAreaScroller"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/txt_release"
                android:scrollbars="vertical">

                <TextView android:id="@+id/txt_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|right"
                    android:text="Plot"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/powderBlueish_20"/>
            </ScrollView>

            <TextView android:id="@+id/txt_cast"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:text="Cast info placeholder"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:lines="7"
                android:background="@color/powderBlueish_20"/>

            <RatingBar android:id="@+id/rtb_rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_rating"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:stepSize="1"
                android:visibility="invisible"/>

            <TextView android:id="@+id/txt_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|right"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/txt_release"
                android:text="User Rating: 83%"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/powderBlueish_20"/>


        </RelativeLayout>

    </LinearLayout>



</LinearLayout>