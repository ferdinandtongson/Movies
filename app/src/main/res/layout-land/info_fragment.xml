<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView android:id="@+id/img_poster_land"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:src="@drawable/placeholder"/>

        <TextView android:id="@+id/txt_cast_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/str_cast"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:background="@color/powderBlueish_20"/>

        <ListView android:id="@+id/lst_cast_land"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            android:background="@color/powderBlueish_20"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:weightSum="10">

        <TextView android:id="@+id/txt_title_land"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:lines="2"
            android:background="@color/powderBlueish_20"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp">

            <TextView android:id="@+id/txt_release_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="left"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/powderBlueish_20"/>

            <TextView android:id="@+id/txt_rating_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/powderBlueish_20"/>

        </RelativeLayout>


        <ScrollView android:id="@+id/textAreaScroller"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="8"
            android:scrollbars="vertical">

            <TextView android:id="@+id/txt_overview_land"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end|right"
                android:layout_weight="6"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:background="@color/powderBlueish_20"/>
        </ScrollView>

    </LinearLayout>



</LinearLayout>